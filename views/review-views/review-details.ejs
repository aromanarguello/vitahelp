<h2> User Reviews </h2>

<form id="form" action="/user-reviews" method="post">
  <label for="review-author-name"> Author's name: </label>
  <input type="text" id="review-author-name" name="reviewAuthorName" value="">
  <br />
  <label for="review-clinic-name">Clinic name: </label>
  <input id="review-clinic-name" name="reviewClinicName"/>
  <br />
  <label for="review-content"> Write your message here: </label>
  <textarea id="review-content" name="reviewContent"></textarea>
  <button> Submit </button>
</form>

<% userReviews.forEach( oneReview => { %>
<ul>
  <li class="review-list">
    <div class="comments-container">
      <div class="review-text-box">
        <h3>Clinic Name: <%=oneReview.authorName%></h3>
        <p>Name: <%=oneReview.clinicName%></p>
        <div class="inner-review-text">
          <a href="/user-reviews/<%= oneReview._id %>/edit">Edit</a>
          <form action="/user-reviews/<%= oneReview._id %>/delete" method="post">
          <button> Delete</button>
          </form>
          <p>Message:
          <br />
            <%=oneReview.content%>
          </p>
        </div>
      </div>
    </div>
  </li>
</ul>
<% }); %>
